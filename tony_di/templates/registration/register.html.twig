{% extends 'base.html.twig' %}

{% block title %}Tony Di - Inscription{% endblock %}

{% block body %}
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    {{ include("pages/menu_pages.html.twig") }}

    <h1 id="post_dates_h1">Inscription</h1>
    </div>

    <div id="body_register">
        <div class="container">
            <div class="d-flex justify-content-center h-100">
                <div id="card_registration" class="card">
                    <div class="card-header">
                        <h3>Formulaire</h3>
                    </div>
                    <div class="card-body">

            {{ form_start(registrationForm) }}
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            {{ form_widget(registrationForm.username, {'attr': {'placeholder': ' Pseudo'}}) }}
                            <div id="form_errors_register">
                            {{ form_errors(registrationForm.username) }}
                            </div>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            {{ form_widget(registrationForm.password.first, {'attr': {'placeholder': ' Mot de passe'}}) }}
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            {{ form_widget(registrationForm.password.second, {'attr': {'placeholder': ' Confirmation mot de passe'}}) }}
                            <div id="form_errors_register">
                            {{ form_errors(registrationForm.password.first) }}
                            </div>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-at"></i></span>
                            </div>
                            {{ form_widget(registrationForm.email, {'attr': {'placeholder': ' Email'}}) }}
                            <div id="form_errors_register">
                            {{ form_errors(registrationForm.email) }}
                            </div>
                        </div>
                        <div id="registration_form_receive_emails">
                            {{ form_row(registrationForm.receiveEmails) }}
                        </div>

                        <div class="form-group">
                            <input type="submit" id="btn_register" value="Inscription" class="btn float-right login_btn">
                        </div>
            {{ form_end(registrationForm) }}
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-center links">
                            Vous avez déjà un compte ?<a href="login">Connexion</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <p class="page_without_footer"></p>
{% endblock %}
