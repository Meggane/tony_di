{% block body %}
    {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <p id="connexion_menu"><a href="{{ asset('login') }}"><i class="fas fa-user"></i> &nbsp;<span id="span_login">Se connecter</span></a></p>
    {% else %}
        <p id="my_account_menu"><a href="{{ asset("mon_compte/profile") }}"><i class="fas fa-user"></i> <span>Mon compte</span></a></p>
        <p id="logout_menu"><a href="{{ asset("logout") }}"><i class="fas fa-sign-out-alt"></i> <span>Se déconnecter</span></a></p>
    {% endif %}

    <div id="menu_container" class="container">
        <div class="row">
            <div class="col-12 col-sm-6 col-md-6 image-grid-item">
                <div id="theatre_menu" class="entry-cover image-grid-cover has-image" style="background-image: url('{{ asset('images/affiche_menu.jpg') }}')">
                    <a href="post/seul_en_scene" class="image-grid-clickbox"></a>
                    <a href="post/seul_en_scene" class="cover-wrapper">Seul en scène</a>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-6 image-grid-item">
                <div id="animations_menu" class="image-grid-cover" style="background-image: url('{{ asset('images/img_spectacle4.jpg') }}')">
                    <a href="post/theater" class="image-grid-clickbox"></a>
                    <a href="post/theater" class="cover-wrapper">Théâtre</a>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-6 image-grid-item">
                <div id="date_a_venir_menu" class="entry-cover image-grid-cover has-image" style="background-image: url('{{ asset('images/journaux.jpg') }}')">
                    <a href="post/dates" class="image-grid-clickbox"></a>
                    <a href="post/dates" class="cover-wrapper">Dates à venir</a>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-6 image-grid-item">
                <div id="a_propos_menu" class="entry-cover image-grid-cover has-image" style="background-image: url('{{ asset('images/img3.jpg') }}')">
                    <a href="presentation" class="image-grid-clickbox"></a>
                    <a href="presentation" class="cover-wrapper">À propos</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}