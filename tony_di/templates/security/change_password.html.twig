{% extends 'base.html.twig' %}

{% block title %}Tony Di - Mon compte{% endblock %}

{% block body %}
    {{ include('pages/account.html.twig') }}
    <div id="change_password_form">
        <div class="container">
            <div class="d-flex justify-content-center h-100">
                <div class="card">
                    <div class="card-header">
                        <h3>Changer le mot de passe</h3>
                    </div>
                    <div id="change_password_form" class="card-body">
                        <form method="post">
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>
                                <input type="password" name="password" pattern="(?=^.{6,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" id="inputPassword" class="form-control" placeholder="Nouveau mot de passe" required>
                            </div>

                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>
                                <input type="password" name="confirm_password" pattern="(?=^.{6,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" id="inputConfirmPassword" class="form-control" placeholder="Confirmer nouveau mot de passe" required>
                            </div>

                            <div id="test" class="form-group">
                                <input id="btn_send_change_password" type="submit" value="Valider" class="btn float-right login_btn">
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-center links">
                            <a href="{{ asset('changer_email/profile') }}">Changer email</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <footer>
        {{ include("pages/footer.html.twig") }}
    </footer>
{% endblock %}
